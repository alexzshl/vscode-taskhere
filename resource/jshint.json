{
    "title": "JSON schema for tasks.json by Tasks Here",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "tasks": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "options": {
                        "type": "object",
                        "properties": {
                            "tasksHereDisplay": {
                                "type": "string",
                                "enum": ["hide", "show"],
                                "default": "hide",
                                "description": "set it as \"hide\"to hide the task on statusbar\nWill be deprecated, please use \"taskshere\" instead"
                            },
                            "tasksHereName": {
                                "type": "string",
                                "default": "task name",
                                "description": "Custom task name\nWill be deprecated, please use \"taskshere\" instead"
                            },
                            "tasksHereColor": {
                                "type": "string",
                                "default": "#1bbd4b",
                                "format": "color",
                                "description": "Custom task color\nWill be deprecated, please use \"taskshere\" instead"
                            },
                            "tasksHere": {
                                "type": "object",
                                "properties": {
                                    "display": {
                                        "type": "string",
                                        "enum": ["hide", "show"],
                                        "default": "hide",
                                        "description": "set it as \"hide\"to hide the task on statusbar"
                                    },
                                    "name": {
                                        "type": "string",
                                        "default": "task name",
                                        "description": "Custom task name"
                                    },
                                    "color": {
                                        "type": "string",
                                        "default": "#1bbd4b",
                                        "format": "color",
                                        "description": "Custom task color"
                                    }
                                },
                                "description": "Extension: Tasks Here"
                            }
                        }
                    }
                }
            }
        }
    }
}
