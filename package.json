{
	"name": "tasks-here",
	"author": {
		"name": "alexzshl"
	},
	"publisher": "alexzshl",
	"version": "3.1.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/alexzshl/vscode-taskshere"
	},
	"bugs": {
		"url": "https://github.com/alexzshl/vscode-taskshere/issues"
	},
	"homepage": "https://github.com/alexzshl/vscode-taskshere",
	"displayName": "Tasks Here",
	"description": "Load VSCode Tasks to Status Bar",
	"keywords": [
		"tasks",
		"status bar"
	],
	"icon": "resource/image/logo.png",
	"engines": {
		"vscode": "^1.37.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"workspaceContains:**/tasks.json",
		"onCommand:extension.taskshere.on"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.taskshere.refresh",
				"title": "refresh",
				"category": "Tasks Here"
			},
			{
				"command": "extension.taskshere.on",
				"title": "active",
				"category": "Tasks Here"
			},
			{
				"command": "extension.taskshere.off",
				"title": "deactive",
				"category": "Tasks Here"
			}
		],
		"configuration": {
			"title": "Tasks Here",
			"properties": {
				"taskshere.on": {
					"type": "boolean",
					"default": true,
					"description": "active"
				},
				"taskshere.display": {
					"type": "boolean",
					"default": true,
					"description": "Global display for status bar item"
				},
				"taskshere.color": {
					"type": "string",
					"format": "color",
					"description": "Global color for status bar item"
				},
				"taskshere.priority": {
					"type": "number",
					"default": 50,
					"minimum": 0,
					"maximum": 9999,
					"description": "The priority of the status bar item. Higher values mean the item should be shown more to the left"
				},
				"taskshere.tasks": {
					"type": "object",
					"properties": {
						"task-label": {
							"type": "object",
							"properties": {
								"name": {
									"type": "string",
									"default": "test"
								},
								"display": {
									"type": "string",
									"enum": [
										"show",
										"hide"
									]
								}
							}
						}
					},
					"description": "[Don't config this item]"
				}
			}
		},
		"jsonValidation": [
			{
				"fileMatch": "tasks.json",
				"url": "./resource/jshint.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.37.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"tslint": "^5.12.1",
		"vscode-test": "^1.0.2"
	}
}
